<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Meaning</th>
      <th>Reading</th>
      <th>Kunreading</th>
      <th>Onreading</th>
      <th>Syn</th>
      <th>Tos</th>
      <th>Meaningmem</th>
      <th>Readingmem</th>
      <th>Srslevel</th>
      <th>Date</th>
      <th>Deck</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.data %></td>
        <td><%= card.meaning %></td>
        <td><%= card.reading %></td>
        <td><%= card.kunreading %></td>
        <td><%= card.onreading %></td>
        <td><%= card.syn %></td>
        <td><%= card.tos %></td>
        <td><%= card.meaningmem %></td>
        <td><%= card.readingmem %></td>
        <td><%= card.srslevel %></td>
        <td><%= card.cardtype %></td>
        <td><%= card.deck_id %></td>
        <td><%= card.answer %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

