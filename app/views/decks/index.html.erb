<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table class="table is-striped is-hoverable table center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>User</th>
      <th>Cardcount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.title %></td>
        <td><%= deck.category %></td>
        <td><%= deck.user_id %></td>
        <td><%= deck.cards.all.size %></td>
				<td><%= link_to 'Study', study_decks_path(deck, :index => 0) %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>
