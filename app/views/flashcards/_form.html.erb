
<%= simple_form_for(@flashcard) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :data %>
    <%= f.input :meaning %>
    <%= f.input :reading %>
    <%= f.input :kunreading %>
    <%= f.input :onreading %>
    <%= f.input :syn %>
    <%= f.input :tos %>
    <%= f.input :meaningmem %>
    <%= f.input :readingmem %>
    <%= f.input :srslevel %>
    <%= f.input :cardtype %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
